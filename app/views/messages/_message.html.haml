.message-items
  .message-items__top{data: {message: {id: message.id}}}
    %p.message-items__top__name
      = message.user.name
    %p.message-items__top__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  %p.message-items__message
    -if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'messageJ-items__image' if message.image.present?
        